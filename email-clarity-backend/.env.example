# Server Configuration
PORT=3001

# MongoDB Configuration
# Use 127.0.0.1 instead of localhost on Windows to avoid IPv6 issues
# For MongoDB Atlas (cloud), use: mongodb+srv://username:password@cluster.mongodb.net/email-clarity
MONGODB_URI=mongodb://127.0.0.1:27017/email-clarity

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# IMAP Account 1
IMAP1_HOST=imap.gmail.com
IMAP1_PORT=993
IMAP1_USER=your-email1@gmail.com
IMAP1_PASSWORD=your-app-password-1
IMAP1_SECURE=true

# IMAP Account 2
IMAP2_HOST=imap.gmail.com
IMAP2_PORT=993
IMAP2_USER=your-email2@gmail.com
IMAP2_PASSWORD=your-app-password-2
IMAP2_SECURE=true

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
INTERESTED_WEBHOOK_URL=https://your-webhook-url.com/interested

